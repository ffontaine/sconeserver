# ArgScript test script
#
#

sub test_sort
{
  ref list = ARGV[0];
  ref pred = ARGV[1];
  ref exp = ARGV[2];

  print("Sorting (" + pred + "): ");
  list.sort(pred);
  print(list);
  print("\n");
  test(String(list) == exp,"List should be: " + exp);
}


print("START\n");

var list = ["one","two","three","Four","five","SIX","seven","EiGhT","nine","ten"];
var pred;

print("Constructed list: ");
print(list);
print("\n");


# Test reverse

list.reverse();
print("reverse: ");
print(list);
