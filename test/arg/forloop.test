# ArgScript test script
#
#

print("START"+endl);
var i;
var c;


print("TEST: Loop 0..10 by incrementing"+endl);


c=0;
for (i=0; i<10; ++i) {
  print ("  LOOP i=" + i + endl);
  ++c;
}
print("DONE i=" + i + endl);
test(i==10,"i incorrect");
test(c==10,"c incorrect");


print("TEST: Loop 10..1 by decrementing"+endl);


c=0;
for (i=10; i>0; --i) {
  print ("  LOOP i=" + i + endl);
  ++c;
}
print("DONE i=" + i + endl);
test(i==0,"i incorrect");
test(c==10,"c incorrect");


print("TEST: Loop 1..256 by doubling"+endl);


c=0;
for (i=1; i<256; i=i*2) {
  print ("  LOOP i=" + i + endl);
  ++c;
}
print("DONE i=" + i + endl);
test(i==256,"i incorrect");
test(c==8,"c incorrect");


print("TEST: Loop 0..10 by incrementing, break at 4"+endl);


c=0;
for (i=0; i<10; ++i) {
  print ("  LOOP i=" + i + endl);
  if (i==4) {
    break;
  }
  ++c;
}
print("DONE i=" + i + endl);
test(i==4,"i incorrect");
test(c==4,"c incorrect");


print("TEST: Loop 0..10 by incrementing, continue over 6"+endl);


c=0;
for (i=0; i<10; ++i) {
  print ("  LOOP i=" + i + " c=" + c + endl);
  if (i>6) {
    continue;
  }
  ++c;
}
print ("DONE i=" + i + " c=" + c + endl);
test(i==10,"i incorrect");
test(c==7,"c incorrect");


print("END"+endl);
